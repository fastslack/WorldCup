<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset name="teams">
    <field name="id" type="hidden" />

		<field name="tid" type="sql" size="1" default="0" label="COM_WORLDCUP_TEAMS_TID" query="SELECT t.id, t.title AS name FROM #__worldcup_tournaments AS t WHERE t.published = 1 ORDER BY id DESC" key_field="id" value_field="name" description="PARAMFILE" />

		<field	name="name"	type="text"	label="COM_WORLDCUP_TEAMS_NAME" description="COM_WORLDCUP_TEAMS_NAME_DESC"
			size="20"	class="input-xxlarge"	default="" primary="true" />

		<field name="group" type="msql" size="1" default="0" label="COM_WORLDCUP_TEAMS_GROUP" sql_select="g.id, g.name AS name" sql_from="#__worldcup_groups AS g" sql_group="" sql_where="g.tid = 4" sql_order="g.name ASC" sql_filter="tid" key_field="id" value_field="name" description="PARAMFILE" />

		<field	name="flag"	type="media"	label="COM_WORLDCUP_TEAMS_FLAG" description="COM_WORLDCUP_TEAMS_FLAG_DESC"
			size="20"	class="input-xxlarge"	directory="flags" />

		<field name="published" type="list" default="1"
			label="COM_WORLDCUP_TEAMS_ENABLED"
			description="COM_WORLDCUP_TEAMS_ENABLED_DESC"
			class="span2 small" >
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

  </fieldset>
</form>
