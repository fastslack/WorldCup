<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset name="matchs">
    <field name="id" type="hidden" />

		<field name="tid" type="msql" size="1" default="" label="COM_WORLDCUP_TEAMS_TID" sql_select="t.id, t.title AS name" sql_from="#__worldcup_tournaments AS t" sql_where="t.published = 1" sql_order="t.id DESC" sql_filter="" key_field="id" value_field="name" description="PARAMFILE" />

		<field	name="date" type="calendar"	label="COM_WORLDCUP_MATCHES_DATE" description="COM_WORLDCUP_MATCHES_DATE_DESC" size="10"	class="inputbox" primary="true" />

		<field name="group" type="msql" size="1" default="0" label="COM_WORLDCUP_MATCHES_GROUP" sql_select="g.id, g.name AS name" sql_from="#__worldcup_groups AS g" sql_where="g.published = 1" sql_group="" sql_order="g.name ASC" sql_filter="tid" key_field="id" value_field="name" description="PARAMFILE" />

		<field name="place" type="msql" size="1" default="0" label="COM_WORLDCUP_MATCHES_PLACE" sql_select="p.id, p.name AS name" sql_from="#__worldcup_places AS p" sql_where="p.published = 1" sql_group="" sql_order="p.name ASC" sql_filter="tid" key_field="id" value_field="name" description="PARAMFILE" />

		<field name="team1" type="msql" size="1" default="0" label="COM_WORLDCUP_MATCHES_TEAM1" sql_select="t.id, t.name AS name" sql_from="#__worldcup_teams AS t" sql_where="t.published = 1" sql_group="" sql_order="t.name ASC" sql_filter="tid" key_field="id" value_field="name" description="PARAMFILE" />

		<field name="team2" type="msql" size="1" default="0" label="COM_WORLDCUP_MATCHES_TEAM2" sql_select="t.id, t.name AS name" sql_from="#__worldcup_teams AS t" sql_where="t.published = 1" sql_group="" sql_order="t.name ASC" sql_filter="tid" key_field="id" value_field="name" description="PARAMFILE" />

		<field name="phase" type="list" default="0"
			label="COM_WORLDCUP_MATCHES_PHASE"
			description="COM_WORLDCUP_MATCHES_PHASE_DESC"
			class="span4" >
			<option value="0">COM_WORLDCUP_PHASES_0</option>
			<option value="1">COM_WORLDCUP_PHASES_1</option>
			<option value="2">COM_WORLDCUP_PHASES_2</option>
			<option value="3">COM_WORLDCUP_PHASES_3</option>
			<option value="4">COM_WORLDCUP_PHASES_4</option>
			<option value="5">COM_WORLDCUP_PHASES_5</option>
		</field>

		<field name="published" type="list" default="1"
			label="COM_WORLDCUP_PLACES_PUBLISHED"
			description="COM_WORLDCUP_MATCHES_PUBLISHED_DESC"
			class="span4" >
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

  </fieldset>
</form>
