<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset name="groups">
    <field name="id" type="hidden" />

		<field name="tid" type="sql" size="1" default="0" label="COM_WORLDCUP_GROUPS_TID" query="SELECT t.id, t.title AS name FROM #__worldcup_tournaments AS t WHERE t.published = 1 ORDER BY id DESC" key_field="id" value_field="name" description="PARAMFILE" />

		<field	name="name"	 type="text"	label="COM_WORLDCUP_GROUPS_NAME" description="COM_WORLDCUP_GROUPS_NAME_DESC"
			size="20"	class="input-xxlarge"	default="" primary="true" />

		<field name="published" type="list" default="0"
			label="JENABLED"
			description="JFIELD_ENABLED_DESC"
			class="span2 small" >
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

  </fieldset>
</form>
